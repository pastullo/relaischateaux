$color-gold: #b7995d;

.listings {
	background-color: #f1f0ef;
	&.listings-spacer {
		padding: 4em 0em;
	}
	.header {
		color: white;
		background-size: cover;
		background-repeat: no-repeat;
		background-position: center center;
		background-color: black;
		padding: 100px 0;
		padding-top: 130px;
		h1,h2,h3,h4 {
			color: white;
		}
		h1 {
			font-weight: bold;
			font-size: 48px;
		}
		.sep {
			width: 20%;
			height: 1px;
			background-color: $color-gold;
			margin: 2em auto;
			opacity: 0.8;
		}
		p.desc {
			font-family: "Goudy Old Style", "Times New Roman", serif;
			font-size: 20px;
		}
		p.little {
	    	text-transform: uppercase;
	    	color: #e9e0ce;
	    	font-weight: bold;
	    	font-size: 13px;
		}
	}
	

	.card {
		a {
			text-decoration: none !important;
		}
		background-color: white;
		box-shadow: 0px 1px 0px rgba(100,100,100, 0.3);
		margin-bottom: 30px;
		div.thumb {
			width: 100%;
			padding-bottom: 66%;
			background-color: #CCC;
			background-size: cover;
			background-repeat: no-repeat;
			background-position: center center;
		}
		h3 {
			margin-top: 10px;
			color: $color-gold;
			text-transform: uppercase;
			font-size: 18px;
			white-space: nowrap;
			overflow: hidden;
			margin: 0;
			margin-bottom: 3px;
		}
		div.info {
			padding: 22px;
			p.list {
				line-height: 1.2em;
				height: 2.4em;
				margin: 0;
				margin-top: 5px;
				span {
					color: #999;
				}
			}
		}
	}

	.listing-filters {
		background-color: white;
		box-shadow: 0 1px 0px rgba(100,100,100,0.3);
		line-height: 60px;
		p {
			font-size: 16px;
			margin: 0px;

		}

		p.available {
			text-transform: uppercase;
			font-size: 13px;
			font-weight: 500;
			color: #AEB3B7;
			margin-right: 10px;
			span {
				font-weight: bold;
				color: $color-gold;
				font-family: "Goudy Old Style", "Times New Roman", serif;
				font-size: 16px;
			}
		}
		a.show-filters {
			line-height: 60px;
			text-transform: uppercase;
			text-decoration: none !important;
			font-size: 15px;
			font-weight: 500;
			color: #414A4E;
			i {
				padding-left: 4px;
				color: #BCBCC4;
			}
		}
	}
	.filters-list {
		display: none;
		background-color: white;
		border-top: 1px solid #DDD;

		.filter-by-experience {
			display: none;
		}
		p.text-muted {
			color: #AEB3B7 !important;
			font-weight: 500 !important;
			font-size: inherit;
			&::after { 
				content: ':';
			}
		}
		a.btn-filter {
			text-transform: uppercase;
			text-align: left;
			width: 20%;
			font-weight: 500;
			padding: 1.4em 0px 1.4em 20px;
			font-size: 13px;
			display: block;
			overflow: hidden;
			color: #AEB3B7;
			float: left;
			background-color: #2B2F33;
			border: 1px solid #2B2F33;
			border-bottom: 1px solid #41484e;
			border-right: 1px solid #41484e;
			&:hover {
				color: $color-gold;
			}
			&.btn-active {
				// background-color: red !important;
				color: $color-gold;
			}
		}
		a.clear-filter {
			font-weight: 500;
			color: #5D676F;
			text-transform: uppercase;
			font-size: 12px;
		}
	}

}
@media (min-width: 768px) and (max-width: 1000px) {
	.filters-list {
		a.btn-filter {
			width: 25% !important;
		}
	}
}

@media (max-width: 768px) {
	.filters-list {
		a.btn-filter {
			width: 50% !important;
		}
	}
}
