$color-gold: #B7995D;
$color-dark-blue: #333D47;
$color-dark-grey: #5D676F;

.properties-container {
	div.overlay {
		display: none;
	}
	div.property {
		// float: left;
		.info-box {
		vertical-align: bottom;	
			.property-box {
				margin-bottom: 30px;
				background-color: rgba(255,255,255,0.9);
				padding: 15px;
				h1,h2,h3,h4 {
					margin: 0;
					color: $color-gold;
					text-transform: uppercase;
				}
				p.desc {
					line-height: 1.3em;
					font-size: 1em;
					height: 3.9em;
					overflow: hidden;
				}
				a {
					color: $color-dark-grey;
					font-weight: bold;
				}
				div.desc_long {
					display: none;
				}
			}
		}
	}
}

@media (max-height: 500px) {
	.properties-container {
		div.property {
			.info-box {
				.property-box {
					p.desc {
						display: none !important;
					}
				}
			}
		}
	}
}



