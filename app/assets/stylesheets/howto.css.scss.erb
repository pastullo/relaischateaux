$color-gold: #b7995d;
$color-dark-blue: #333D47;
.how-to {
	color: $color-dark-blue;
	padding: 70px 0;
	display: none;
	position: fixed;
	width: 100%;
	top: 0;
	left: 0;
	z-index: 1040;
	background-color: white;
	font-size: 16px;
	box-shadow: 0px 3px 2px rgba(51, 51, 51, 0.4);
	img.brand {
		max-height: 125px;
		margin-bottom: 2em;
	}
	p.title {
		
		text-transform: uppercase;
		font-weight: 500;
	}
	div.sep {
		background-color: $color-gold;
		width: 70px;
		height: 3px;
		margin: 1em 0;
	}
	a.close {
		position: absolute;
		top: 30px;
		right: 30px;
	}
}


@media (max-width: 768px) {
	.how-to {
		padding: 30px 0;
		// position: absolute;
		font-size: 14px;
		img.brand {
			// max-height: 70px;
			width: 100%;
			max-width: 100%;
			height: auto;
			margin-top: 10px
		} 
		div.sep {
			display: none;
		}
		a.close {
			top: 10px;
			right: 10px;
		}
	}
}
