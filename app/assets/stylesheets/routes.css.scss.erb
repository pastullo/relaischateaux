.hero-fixed {
	
	position: relative;
	width: 100%;
	height: 100vh;
	background-color: #222;
	overflow: hidden;
	min-height: 400px;
	background-size: cover;
	// background-attachment: fixed;
	background-position: center center;

	.info-box {
		.stage-box {
			background-color: #232323;
			color: white;
			padding: 2em;
			h1,h2,h3,h4 {
				margin-top: 0;
				color: white;
				font-size: 36px;
				text-transform: uppercase;
				font-weight: bold;
			}
			p.recap {
				font-family: "Goudy Old Style", "Times New Roman", serif;
				text-transform: uppercase;
				span.big {
					font-size: 1.3em;
					font-weight: bold;
					sup {
						font-size: 50%;
					}
				}
				span.sep {
					color: #CCC;
					padding: 0 0.5em;
				}
			}
			p.location {
				font-weight: bold;
				font-size: 0.8em;
				text-transform: uppercase;
				margin-bottom: 2em;
			}
			div.sep {
				height: 1px;
				width: 30%;
				margin: 2em 0;
				background-color: $color-gold;
			}
			a.more {
				text-transform: uppercase;
				color: #5c666f;
				font-weight: bold;
				display: block;
				text-decoration: none !important;
				&:hover {
					color: white;
				}
			}
			.steps {

				div.step {
					$steps-square-size: 2.2em;
					width: $steps-square-size;
					height: $steps-square-size;
					line-height: $steps-square-size;
					font-family: "Goudy Old Style", "Times New Roman", serif;
					font-size: 1.2em;
					text-align: center;
					position: relative;
					margin-top: 15px;
					display: inline-block;
					margin-right: 10px;

					a {
						color: $color-gold;
						&.next { color: #E9E0CE; }
					}

					.border {
						position: absolute;
						transform: rotate(45deg);
						-ms-transform: rotate(45deg);
						top: 0;
						left: 0;
						border: 1px solid $color-gold;
						width: 100%;
						height: 100%;

					}
				}
			}
		}
	}
}


@media (max-width: 768px) {
	.hero-fixed {
		.info-box {
			.stage-box {
				h1,h2,h3,h4 {
					font-size: 24px;
				}
			}
		}
	}
}

.properties-available {
	width: 100%;
	background-color: #232323;
	padding: 2.5em 0em;
	text-align: center;
	position: relative;
	&:after { 
		top: 100%; 
		left: 50%; 
		border: solid transparent; 
		content: " "; 
		height: 0; width: 0; 
		position: absolute; 
		pointer-events: none; 
		border-color: rgba(35,35,35, 0); 
		border-top-color: #232323; 
		border-width: 8px; 
		margin-left: -8px; 
		z-index: 1;
	}
	span {
		border: 1px solid $color-gold;
		padding: 1em 4em;
		color: white;
		font-weight: bold;
		text-transform: uppercase;
		display: inline-block;
		position: relative;
		&.no-border {
			border-color: transparent !important;
			padding-bottom: 0;
			margin-bottom: -1em;
			display: block;
		}
		img {
			position: absolute;
			max-height: 25px;
			top: -17px;
			left: calc(50% - 12px);
		}

	}
	&.tiny {
		span {
			padding: 0 !important;
			display: inline;
			img {
				display: none !important;
			}
		}
	}
}

#more {
	position: relative;
}

