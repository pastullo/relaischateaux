<div class="how-to-page">
	<div class="container">
		
		<div class="row">
			<div class="col-sm-12 text-center">
				<h2><%= t 'about' %> www.relaischateauxafrica.com</h2>
				<br><br>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-4">
				<p class="text-center"><%= image_tag 'how_to/relais.png', class: 'brand' %></p>
				<p class="title"><%= t 'howto.relais' %></p>
				<div class="sep"></div>
				<p><%= t 'howto.relais_text' %></p>
			</div>
			<div class="col-sm-4">
				<p class="text-center"><%= image_tag 'how_to/africa.png', class: 'brand' %></p>
				<p class="title"><%= t 'howto.africa' %></p>
				<div class="sep"></div>
				<p><%= t 'howto.africa_text' %></p>
			</div>
			<div class="col-sm-4">
				<p class="text-center"><%= image_tag 'how_to/icon.png', class: 'brand' %></p>
				<p class="title"><%= t 'howto.icon' %></p>
				<div class="sep"></div>
				<p><%= t 'howto.icon_text' %></p>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-12">
				<p class="title"><%= t 'howto.start' %></p>
				<div class="sep"></div>
				<p><%= t 'howto.start_text' %></p>
			</div>
		</div>

		<div class="row">
			<div class="col-sm-10 col-sm-offset-1 text-center">
				<div class="liner">
					<div class="holder">
						<%= image_tag 'logo/tiny.png' %>
					</div>
				</div>
				<h3><%= t 'howto.meet_title' %></h3>
				<%=raw t 'howto.meet_text' %>
			</div>
		</div>

	</div>

	<div class="consultants">
		<div class="container">

			<div class="row consultants-slider">
				<% Consultant.all.each do |consultant| %>
					<%= render partial: 'static_pages/consultant', locals: {c: consultant} %>
				<% end %>
			</div>

		</div>
	</div>
</div>

<script type="text/javascript">
$(function(){
	$('.consultants-slider').slick({
	  infinite: true,
	  slide: 'div.slide',
	  slidesToShow: 3,
	  slidesToScroll: 1,
	  responsive: [
	    {
	      breakpoint: 990,
	      settings: {
	        slidesToShow: 2,
	        slidesToScroll: 2
	      }
	    },
	    {
	      breakpoint: 768,
	      settings: {
	        slidesToShow: 1,
	        slidesToScroll: 1,
	        arrows: false,
	        dots: true,
	        autoplay: true
	      }
	    }]
	});
});
</script>