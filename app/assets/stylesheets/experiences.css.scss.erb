$color-gold: #b7995d;
$color-dark-blue: #333D47;


div.experiences-listing {
	background-color: black;
	padding: 50px 0px;

	.header {
		color: white;
		background-size: cover;
		background-position: right bottom;
		background: url(<%= asset_path('backgrounds/zebras.jpg') %>);
		padding-top: 150px;
		padding-bottom: 100px;

		h1,h2,h3,h4 {
			color: white;
		}
		p {
			color: white;
			font-size: 18px;
			font-family: "Goudy Old Style", "Times New Roman", serif;
		}
		div.sep {
			width: 20%;
			margin: 2em 0;
			height: 1px;
			background-color: $color-gold;
		}
	}
	.experiences {
		padding: 0 !important;
	}
}
// EXPERIENCE LIST
div.experience {
    // float:left;
    position: relative;
    width: 16.6667%;
    padding-bottom: 33.3334%;
    overflow:hidden;
    text-shadow: 0 0 3px rgba(51,51,51,0.3);
    background-size: cover;
    background-repeat: no-repeat;
    background-color: #333;
    background-position: center center;

	&.width-2 {
		width: 33.3334%;
	}
	&.width-3 {
		width: 50%;
	}
	&.height-half {
		padding-bottom: 16.6667%;
	}

	div.content {
		color: white;
		text-align: center;
	    position:absolute;
	    height:100%; /* = 100% - 2*10% padding */
	    width:100%; /* = 100% - 2*5% padding */
	    padding: 5%;
		// transition: background .3s;
	    transition: opacity .5s ease;
	    opacity: 0;
		h3 {
			color: white;
		}
	    
	    &:hover {
	    	background-color: rgba(0,0,0,0.3);
	    }

	    .table{
		    display: table;
		    height: 100%;
		    width: 100%;
			.table-cell{
			    display:table-cell;
			    vertical-align:middle;
			    height:100%;
			    width:100%;

			    h3 {
			    	color: white;
			    	font-size: 1.7em;
			    	margin-bottom: 2em;
			    	margin-top: 0;
			    }
			    span {
			    	border: 1px solid $color-gold;
			    	// padding: 1.5em 2em 1.2em;
			    	padding: 1em 1.6em;
			    	color: white;
			    	text-transform: uppercase;
			    	font-weight: bold;
			    	// &.explore {
				    // 	border-right: none;
			    	// }
			    	// &.plus {
			    		
			    	// 	padding: 1.5em 1.7em 1.2em;
			    	// }
			    	
			    }
			}
		}
	}

	video.fullscreen-background {
		position: absolute;
		right: 0;
		bottom: 0;
		min-width: 100%;
		min-height: 100%;
		width: 100%;
		height: auto;
	}


}
