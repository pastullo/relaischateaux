// SQUARE BLOCKS 
div.square-block {
    float:left;
    position: relative;
    // width: 33%;
    // padding-bottom : 33%; 
    /* = width for a 1:1 aspect ratio */
    overflow:hidden;
    text-shadow: 0 0 3px rgba(51,51,51,0.5);
    background-size: cover;
    background-position: center center;
    background-repeat: no-repeat;
    background-color: #666;

	div.content {
		color: white;
		text-align: center;
	    position:absolute;
	    height:100%;
	    width:100%;
	    padding: 10%;
		transition: background .3s;
		h3 {
			font-size: 26px;
		}
		h1,h2,h3,h4 {
			color: white;
			margin-top: 10px;
			text-shadow: 0 0 5px rgba(100,100,100,0.8), 0 0 3px rgba(0,0,0,0.9);
		}
	    
	    &:hover {
	    	background-color: rgba(0,0,0,0.2);
	    }
	    &.play-on-hover {
	    	opacity: 0;
	    }

	    .table{
		    display:table;
		    height:100%;
		    width:100%;
			.table-cell{
			    display:table-cell;
			    vertical-align:middle;
			    height:100%;
			    width:100%;
			}
		}
	}

	&.square-block-single {
		width: 100%;
		padding-bottom: 50%;
	}
	&.square-block-double {
		width: 50%;
		padding-bottom: 25%;
	}
	&.square-block-third {
		width: 33%;
		padding-bottom : 33%;
	}
	&.square-block-fourth {
		width: 25%;
		padding-bottom : 25%;
	}
	&.square-block-two {
		width: 50%;
		padding-bottom: 50%;
	}
	&.two-of-three {
		width: 66.66%;
		padding-bottom: 33.33%;
	}
	&.one-of-three {
		width: 33.33%;
		padding-bottom : 33.33%;
	}

	video.fullscreen-background {
		position: absolute;
		right: 0;
		bottom: 0;
		min-width: 100%;
		min-height: 100%;
		width: 100%;
		height: auto;
	}
}


@media (max-width: 768px) {
	div.square-block {

		&.square-block-single {
