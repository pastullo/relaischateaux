// PHONES
@media (max-width: 768px) {
div.experiences-listing {
	padding: 0px;
	.header {
		padding: 70px 0px;
	}
}

	div.experience {
		width: 50%;
		padding-bottom : 50%; /* = width for a 1:1 aspect ratio */
		.content {
			.table-cell {
				span {
					display: none;
				}
				h3 {
					margin: 0 !important;
				}
			}
		}

		&.width-2 {
			// width: 33.33%;
			width: 50%;
		}
		&.width-3 {
			width: 100%;
		}
		&.height-half {
			// padding-bottom: 16.65%;
			padding-bottom: inherit;
		}
	}
}



	


.hero-bg {
	position: absolute;
	background-repeat: no-repeat;
	background-size: cover;
	background-position: center center;
	width: 100%;
	height: inherit;
	display: table;
}


.info-box {
	display: table-cell;
	vertical-align: middle;
	padding: 0px 20px;

}
.box {
	padding: 20px;
	background-color: rgba(255,255,255,0.9);
	border-radius: 3px;
	box-shadow: 0px 1px 0px rgba(51, 51, 51, 0.1);
	h2,h3,h4 {
		margin-top: 0em;
	}
	span { 
		font-weight: bold;
		color: #333D47;
	}
	a {
		color: #8D7249;
		text-transform: uppercase;
	}
	.room-info {
		h4 {
			text-transform: none !important;
		}
		a {
			color: $color-dark-blue !important;
			font-size: 1em !important;
		}
		div.sep {
			width: 100%;
			height: 1px;
			margin: 1em 0em;
			background-color: #e9e0ce;
		}
	}
}
	



