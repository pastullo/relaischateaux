.navbar {
	margin-bottom: 0px !important;
	box-shadow: 0 0 2px rgba(100,100,100,0.3);
	&.navbar-default {
		border: none;
		background-color: white;
		border-bottom: 3px solid #bea36d;

		.navbar-nav > li > a {
			color: $color-dark-blue;
		}

	}
	
	&.navbar-headroom {
	    transition: transform 400ms ease-in-out;
	}
	&.headroom--pinned {
	    transform: translateY(0%);
	}
	&.headroom--unpinned {
	    transform: translateY(-100%);
	}

	.navbar-right {
		margin-right: 15px;
	}
	.navbar-brand {
		padding: 0px;
		margin-left: 25px;
		img.logo {
			max-height: 38px;
			margin-top: 15px;
			// transition: opacity .5s ease;
		}
	}
	.navbar-toggle {
		border: none;
		span.icon-bar {
			color: $color-dark-blue;
		}
		&.phone {
			// margin-top: 15px;
			margin-bottom: 0px;
			// margin-right: 4px;
			i.fa {
				color: $color-dark-blue;
				font-size: 1.5em;
			}
		}
		&.phone-xs {
			padding: 6px 10px;
		}
	}

	a.dropdown-toggle {
		color: $color-dark-blue;
		// font-weight: bold;
		text-transform: capitalize;
		span.caret {
			color: #999;
		}
	}
	p.navbar-btn {
		margin-bottom: 12px;
		margin-top: 12px;
		a.btn {
			padding-left: 2em;
			padding-right: 2em;
		}
	}

	ul.navbar-bordered {
		margin-top: 15px;
		margin-bottom: 15px;
		// border: 1px solid #dfd1b6;
		li {
			a {
				padding-top: 10px;
				padding-bottom: 10px;
				&.connect {
					text-transform: uppercase;
					color: white;
					font-weight: 500;
					background-color: $color-dark-blue;
				}
			}
			div.sep {
				background-color: #CCCCCC;
				width: 1px;
				height: 11px;
				margin-top: 15px;
			}
		}
		li.open {
			a {
				background-color: white !important;
			}
		}
	}

	ul.navbar-menu {
		list-style: none;
		margin: 0px;
		margin-left: 20px;
		padding: 0px;
		li {

			display: inline-block;
			text-transform: uppercase;
			line-height: 1em;
			border-bottom: 1px solid #EEE;
			&:last-child {
				border-bottom: none;
			}

			&.active {
				a {
					color: $color-gold;
					background: none;

					&:hover {
						color: $color-gold;
						background: none;
					}
				}
			}
			a {
				color: $color-dark-blue;
				font-size: 13px;
				font-weight: normal;
				padding-left: 15px;
				padding-right: 10px;
				// &:last-child {
				// 	padding-right: 0 !important;
				// }
				&:hover {
					text-decoration: none;
					color: darken($color-dark-blue,40);
				}
			}
		}
	}

	div.navbar-footer {
		background-color: #F5F5F3;
		border-top: 1px solid #EEE;
		ul.navbar-menu {
			li {
				a {

					padding: 0.6em 2.4em 0.6em 0;
				}
			}
		}
	}

	.logo-hero {
		position: absolute;
		top: 0px;
		left: 0px;
		width: 100%;
		text-align: center;
		z-index: 1;
		margin-top: 65px;
		div.holder {
			background-color: white;
			width: 120px;
			margin-left: auto;
			margin-right: auto;
			// margin-top: 70px;
			padding: 10px 15px 17px;
			border-bottom-right-radius: 50% 15px;
			border-bottom-left-radius: 50% 15px;
			img {
				max-width: 100%;
				height: auto;
			}

		}

	}

}

