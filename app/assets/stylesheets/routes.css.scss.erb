		}
		.info {
			padding: 15px;
			h3, h4 {
				text-transform: uppercase;
				color: $color-gold;
				font-size: 20px;
					&.truncate {
					    line-height: 1.3em;
					    height: 1.3em;
					    overflow: hidden;
					}

			}
			h4.room {
				text-transform: uppercase;
				font-size: 20px;
			}

			p.price {
				color: #5D676F;
				font-family: "Goudy Old Style", "Times New Roman", serif;
				text-transform: uppercase;
				font-weight: bold;
				font-size: 15px;
			}
			a.more {
				font-weight: bold;
				color: #5D676F;
				&:hover {
					color: $color-gold;
				}
			}
			p.desc {
				line-height: 1.3em;
				overflow: hidden;
				height: 3.9em;
				font-size: 1em;
			}
		}
		a { 
			color: $color-gold;
			text-transform: uppercase;
			font-size: 110%;
			// font-weight: bold;
		}
	}
}

.route-sep {
	background-color: #232323;
	width: 100%;
	padding: 0.6em 0;
